<%= layout_header "Регистрация" %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-stacked"}) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>
  
  <%= f.hidden_field :type, :value => params[:type] %>

  <p><%= f.submit "Зарегистрироваться", :class => "btn primary" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
